<!-- Primary Page Layout
================================================== -->
<header>
    <h4 class="logo">CODERKUNGFU</h4>
    <div class="menubutton"><i class="icon-reorder"></i></div>
    <nav>
        <ul>
            {{#navbar}}
            <li><a href="{{{href}}}">{{label}}</a></li>
            {{/navbar}}
            <!--<li class="search"><i class="icon-search"></i><i class="icon-remove"></i></li>-->
        </ul>

        <div class="search_popup">
            <form>
                <input type="text" value="Search..." onfocus="if (this.value == 'Search...') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Search...';}"></input>
                <button type="submit">Search</button>
            </form>
        </div>
    </nav>
    <br class="clear" />
</header>